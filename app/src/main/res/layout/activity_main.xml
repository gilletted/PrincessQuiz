                android:text="@string/q4_choice_two"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q4_choice_three"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp_margin"
                android:text="@string/q4_choice_four"
                android:textSize="@dimen/choices_text_size" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/question_5_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q5"
                android:textSize="@dimen/question_text_size" />

            <RadioButton
                android:id="@+id/question_5_correct_answer_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q5_choice_one"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q5_choice_two"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q5_choice_three"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp_margin"
                android:text="@string/q5_choice_four"
                android:textSize="@dimen/choices_text_size" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q6"
            android:textSize="@dimen/question_text_size" />

        <RadioGroup
            android:id="@+id/question_6_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/question_6_correct_answer_rb"
                android:layout_width="wrap_content"
