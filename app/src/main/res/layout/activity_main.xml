<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/sixteen_dp_margin"
    android:layout_marginEnd="@dimen/sixteen_dp_margin"
    android:layout_marginLeft="@dimen/sixteen_dp_margin"
    android:layout_marginRight="@dimen/sixteen_dp_margin"
    android:layout_marginStart="@dimen/sixteen_dp_margin"
    android:layout_marginTop="@dimen/sixteen_dp_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sixteen_dp_margin"
            android:text="@string/intro"
            android:textSize="@dimen/question_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q1"
            android:textSize="@dimen/question_text_size" />

        <CheckBox
            android:id="@+id/question_1_answer_1_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q1_choice_one"
            android:textSize="@dimen/choices_text_size" />

        <CheckBox
            android:id="@+id/question_1_answer_2_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q1_choice_two"
            android:textSize="@dimen/choices_text_size" />

        <CheckBox
            android:id="@+id/question_1_answer_3_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q1_choice_three"
            android:textSize="@dimen/choices_text_size" />

        <CheckBox
            android:id="@+id/question_1_answer_4_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sixteen_dp_margin"
            android:text="@string/q1_choice_four"
            android:textSize="@dimen/choices_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q2"
            android:textSize="@dimen/question_text_size" />

        <RadioGroup
            android:id="@+id/question_2_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q2_choice_one"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:id="@+id/question_2_correct_answer_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q2_choice_two"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q2_choice_three"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp_margin"
                android:text="@string/q2_choice_four"
                android:textSize="@dimen/choices_text_size" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q3"
            android:textSize="@dimen/question_text_size" />

        <RadioGroup
            android:id="@+id/question_3_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q3_choice_one"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q3_choice_two"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:id="@+id/question_3_correct_answer_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q3_choice_three"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp_margin"
                android:text="@string/q3_choice_four"
                android:textSize="@dimen/choices_text_size" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q4"
            android:textSize="@dimen/question_text_size" />

        <RadioGroup
            android:id="@+id/question_4_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/question_4_correct_answer_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q4_choice_one"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
