                android:text="@string/q6_choice_three"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp_margin"
                android:text="@string/q6_choice_four"
                android:textSize="@dimen/choices_text_size" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q7"
            android:textSize="@dimen/question_text_size" />

        <RadioGroup
            android:id="@+id/question_7_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q7_choice_one"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q7_choice_two"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:id="@+id/question_7_correct_answer_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q7_choice_three"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp_margin"
                android:text="@string/q7_choice_four"
                android:textSize="@dimen/choices_text_size" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q8"
            android:textSize="@dimen/question_text_size" />

        <RadioGroup
            android:id="@+id/question_8_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/question_8_correct_answer_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q8_choice_one"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/q8_choice_two"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
