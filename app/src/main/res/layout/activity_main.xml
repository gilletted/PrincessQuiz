                android:text="@string/q8_choice_three"
                android:textSize="@dimen/choices_text_size" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp_margin"
                android:text="@string/q8_choice_four"
